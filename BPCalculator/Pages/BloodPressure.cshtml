@page
@model BPCalculator.Pages.BloodPressureModel

@{
    ViewData["Title"] = "BP Category Calculator";
}


<h4>BP Category Calculator</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" id="form1">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BP.Systolic" class="control-label"></label>
                <input asp-for="BP.Systolic" class="form-control" id="systolic-input" onchange="this.form.submit()" />
                <span asp-validation-for="BP.Systolic" class="text-danger" id="systolic-error"></span>
            </div>
            <div class="form-group">
                <label asp-for="BP.Diastolic" class="control-label"></label>
                <input asp-for="BP.Diastolic" class="form-control" id="diastolic-input" onchange="this.form.submit()" />
                <span asp-validation-for="BP.Diastolic" class="text-danger"></span>
            </div>
            @if (ViewData.ModelState.IsValid)
            {
                <div class="form-group">
                    <!-- Add ID here so that we can grab it in Selenium Test -->
                    @Html.DisplayFor(model => model.BP.Category, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            }
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
